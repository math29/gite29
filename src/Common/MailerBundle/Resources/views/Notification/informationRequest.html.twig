{% extends ':emails:base_notification.html.twig' %}

{% block body %}
    <p>
        Bonjour {{ receiver.username }},<br>
        {{ informationRequest.firstName }} {{ informationRequest.lastName }} vient de vous envoyer une demande d'information concernant l'annonce {{ informationRequest.gite.title }}.
        <br>
        Voici son message: <br>
        {{ informationRequest.comment }}
    </p>
    <button type="submit" href="mailto:{{ informationRequest.email }}" style="background-color:rgb(252, 136, 22);
            border-bottom-color:rgb(252, 136, 22);
            border-bottom-left-radius:6px;
            border-bottom-right-radius:6px;
            border-bottom-width:2px;
            border-left-color:rgb(252, 136, 22);
            border-left-style:solid;
            border-left-width:2px;
            border-right-color:rgb(252, 136, 22);
            border-right-style:solid;
            border-right-width:2px;
            border-top-color:rgb(252, 136, 22);
            border-top-left-radius:6px;
            border-top-right-radius:6px;
            border-top-style:solid;
            border-top-width:2px;
            box-shadow:none;
            box-sizing:border-box;
            color:rgb(255, 255, 255);
            cursor:pointer;
            display:inline-block;
            font-family:Lato, sans-serif;
            font-size:12px;
            font-weight:900;
            height:40px;
            letter-spacing:0.72px;
            line-height:18px;
            margin-bottom:0px;
            margin-left:20px;
            margin-top:20px;
            padding-bottom:9px;
            padding-left:12px;
            padding-right:12px;
            padding-top:9px;
            text-align:center;
            text-decoration-color:rgb(255, 255, 255);
            text-decoration-line:none;
            text-decoration-style:solid;
            text-size-adjust:100%;
            text-transform:uppercase;
            touch-action:manipulation;
            transition-delay:0s;
            transition-duration:0.3s;
            transition-property:all;
            transition-timing-function:ease;
            user-select:none;
            vertical-align:middle;
            white-space:nowrap;
            width:131.094px;
            -webkit-font-smoothing:subpixel-antialiased;
            -webkit-tap-highlight-color:rgba(0, 0, 0, 0);">Send message</button>
{% endblock %}