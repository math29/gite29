{% extends 'base.html.twig' %}

{% block title %}Demande d'information{% endblock %}

{% block body %}
    <main class="page-content text-left">
        <!-- Section Title Breadcrumbs-->
        <section class="section-full">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <h1>{{ gite.title }}</h1>
                        <p></p>
                        <ol class="breadcrumb">
                            <li><a href="{{ path('home') }}">Home</a></li>
                            <li><a href="{{ path('search_display_all') }}">Tous les gites</a></li>
                            <li><a href="{{ path('property-gite-single', {'id': gite.id}) }}">{{ gite.title }}</a></li>
                            <li class="active">Demande d'information</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>

        <section class="section-md text-left">
            <div class="container">
                <div class="row">
                {{ form_start(form) }}
                {{ form_errors(form) }}

                <div class="col-sm-6">
                    <div class="form-group">
                        {{ form_label(form.firstName, 'Votre pr√©nom', {'attr': {'class': 'form-control'}}) }}
                        {{ form_widget(form.firstName, {'attr': {'placeholder' : 'Votre prenom', 'class': 'form-control'}}) }}
                        {{ form_errors(form.firstName) }}
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        {{ form_label(form.lastName, 'Votre nom', {'attr': {'class': 'form-control'}}) }}
                        {{ form_widget(form.lastName, {'attr': {'placeholder' : 'Votre nom', 'class': 'form-control'}}) }}
                        {{ form_errors(form.lastName) }}
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        {{ form_label(form.email, 'Votre e-mail', {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'id': 'contact-email', 'data-constraints': '@Required @Email'}}) }}
                        {{ form_errors(form.email) }}
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        {{ form_label(form.comment, 'Un petit message pour accompagner votre demande', {'attr': {'class': 'form-control'}}) }}
                        {{ form_widget(form.comment, {'attr': {'placeholder' : 'Votre message', 'class': 'form-control'}}) }}
                        {{ form_errors(form.comment) }}
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <a class="btn btn-primary btn-sm"
                           href="{{ path('property-gite-single', {'id': gite.id}) }}">Annuler</a>
                        {{ form_widget(form.save, { 'label': 'Envoyer', 'attr':{
                            'class': 'btn btn-sushi btn-sm btn-shadow-1 btn-sm'
                        }}) }}
                    </div>
                </div>
                {#{{ form(form, {'attr': {'novalidate': 'novalidate'}}) }}#}

                {{ form_rest(form) }}
                {{ form_end(form) }}
                </div>
            </div>
        </section>
    </main>
{% endblock %}